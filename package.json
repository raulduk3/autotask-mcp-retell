{
	"name": "@layer7systems/autotask-mcp-retell",
	"version": "0.1.0",
	"description": "MCP server for Autotask ticket creation via Retell AI",
	"type": "module",
	"engines": {
		"bun": ">=18.0.0"
	},
	"scripts": {
		"build": "tsc",
		"dev": "tsx src/index.ts",
		"dev:bun": "bun --import tsx/esm src/index.ts",
		"start": "bun dist/index.js",
		"lint": "eslint src",
		"lint:fix": "eslint src --fix",
		"format": "prettier --write \"src/**/*.ts\"",
		"format:check": "prettier --check \"src/**/*.ts\"",
		"typecheck": "tsc --noEmit",
		"docs": "typedoc --options config/typedoc.json",
		"docs:html": "typedoc --options config/typedoc-html.json",
		"docs:md": "typedoc --options config/typedoc.json --out docs",
		"generate:agent": "bun scripts/generate-agent.ts"
	},
	"dependencies": {
		"@modelcontextprotocol/sdk": "^1.25.1",
		"body-parser": "^2.2.1",
		"dotenv": "^17.2.3",
		"express": "^5.2.1",
		"pino": "^10.1.0",
		"pino-pretty": "^13.1.3",
		"zod": "^4.2.1"
	},
	"devDependencies": {
		"@eslint/js": "^9.39.2",
		"@types/bun": "latest",
		"@types/express": "^5.0.6",
		"@typescript-eslint/eslint-plugin": "^8.50.0",
		"@typescript-eslint/parser": "^8.50.0",
		"eslint": "^9.39.2",
		"eslint-config-prettier": "^10.1.8",
		"eslint-plugin-jsdoc": "^61.5.0",
		"prettier": "^3.7.4",
		"tsx": "^4.21.0",
		"typedoc": "^0.28.15",
		"typedoc-plugin-markdown": "^4.9.0",
		"typescript": "^5.9.3",
		"typescript-eslint": "^8.52.0"
	}
}
